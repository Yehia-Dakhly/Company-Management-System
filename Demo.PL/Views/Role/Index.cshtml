@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" class="btn btn-success">Add New Role</a>
<br />
<br />
@if (Model is not null && Model.Count() > 0)
{
    <div class="mt-2">
        <form asp-action="Index" class="row offset-2">
            <div class="col-8">
                @* <label class="col-form-label">Search Employee!</label> *@
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's Name" />
            </div>
            <div class="col-4">
                <input type="submit" value="SearchValue" class="btn btn-info" />
            </div>
        </form>
    </div>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div>
        <h1>There's No Roles!</h1>
    </div>
}

