@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Employee - @Model.Name - Details!</h1>
<br />
<div asp-validation-summary="All"></div>
<form asp-action="Edit" enctype="multipart/form-data">
    <partial name="PartialViews/CreateEditPartialView" model="@Model" />
    <input asp-for="ImageName" hidden />
    <input type="submit" value="Save" class="btn btn-primary"/>
    <a asp-action="Index"class="btn btn-light">Back To List</a>
</form>
@section ValidationScriptSection{
<partial name="_ValidationScriptsPartial" />
}