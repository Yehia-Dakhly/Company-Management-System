@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
    string ViewDataMessage = ViewData["Message"] as string;
    // Enforce Type Safety -> Required Casting [Strongly Typed]
    string ViewBagMessage = ViewBag.Message;
    // Can't Enforce Type Safety -> Not Required Casting [Weakly Typed]
}
@* <partial name="_CreatedPartial" /> *@
@if (TempData["Message"] is not null)
{
    <div id="alertMessage" class="alert alert-success">
        @TempData["Message"]
    </div>
}
<a asp-action="Create" class="btn btn-success">Add New Employee</a>
<br />
<br />
@if(Model.Count() > 0)
{
    <h1>All Employees: -</h1>
    <br />
    <div class="mt-2">
    <form asp-action="Index" class="row offset-2">
        <div class="col-8">
            @* <label class="col-form-label">Search Employee!</label> *@
            <input class="form-control" type="text" name="name" placeholder="Employee's Name" />
        </div>
        <div class ="col-4">
        <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </form>
    </div>
    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E => E.Image)</td>
                <td>@Html.DisplayNameFor(E => E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.Age)</td>
                <td>@Html.DisplayNameFor(E => E.Address)</td>
                <td>@Html.DisplayNameFor(E => E.Salary)</td>
                <td>@Html.DisplayNameFor(E => E.Department)</td>
                <td>@Html.DisplayNameFor(E => E.EmailAddress)</td>
                <td>@Html.DisplayNameFor(E => E.Phone)</td>
                <td>@Html.DisplayNameFor(E => E.HireDate)</td>
                <td>@Html.DisplayNameFor(E => E.IsActive)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            
                @foreach(var employee in Model)
                {
                    <tr>
                        <td><img src="~/Files/Images/@employee.ImageName" class="rounded height="40" width="40" alt="No Image"></td>
                        <td>@employee.Name</td>
                        <td>@employee.Age</td>
                        <td>@employee.Address</td>
                        <td>@Html.DisplayFor(E => employee.Salary)</td>
                        <td>@Html.DisplayFor(E => employee.Department.Name)</td>
                        <td>@Html.DisplayFor(E => employee.EmailAddress)</td>
                        <td>@employee.Phone</td>
                        <td>@employee.HireDate</td>
                        @* <td>@Html.DisplayFor(E => employee.IsActive)</td> *@
                        <td>
                            @if(employee.IsActive == true) 
                            {
                                <i class="fa-solid fa-circle" style="color: green"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-circle" style="color: red"></i>
                            }
                    </td>
                        <partial name="_ButtonsPartialView" model="employee.Id.ToString()"/>
                    </tr>
                }
            
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Employees!</h3>
    </div>
}
