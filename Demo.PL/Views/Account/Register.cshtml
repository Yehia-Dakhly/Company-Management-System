@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center mb-5">
			<h1 class="heading-section mt-5">Register</h1>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-4">
			<div class="login-wrap p-0">
				<h3 class="mb-4 text-center">Have an account?</h3>
				<form asp-action="Register">

					<div class="form-group">
						<input asp-for="@Model.FName" class="form-control" placeholder="Your First Name" required>
						<span asp-validation-for="@Model.FName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input asp-for="@Model.LName" class="form-control" placeholder="Your Last Name" required>
						<span asp-validation-for="@Model.LName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input asp-for="@Model.Email" class="form-control" placeholder="Your Email" required>
						<span asp-validation-for="@Model.Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input id="password-field" asp-for="@Model.Password" class="form-control" placeholder="Password" required>
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
						<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
					</div>

					<div class="form-group">
						<input id="confirm-password-field" asp-for="@Model.ComfirmPassword" class="form-control" placeholder="Confirm Password" required>
						<span asp-validation-for="@Model.ComfirmPassword" class="text-danger"></span>
						<span toggle="#confirm-password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
					</div>
					<div class="form-group">
						<label class="checkbox-wrap checkbox-primary">
							I Agree To Terms & Conditions!
							<input asp-for="@Model.IsAgree" checked>
							<span asp-validation-for="@Model.IsAgree" class="checkmark"></span>
						</label>
					</div>


					<div class="form-group d-md-flex">
						<div class="text-md-left">
							<p>Do you Have An Account? <a asp-action="Login" style="color: #fff"><strong>Login</strong></a>
						</div>
					</div>
						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
						</div>
				</form>
				<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
				<div class="social d-flex text-center">
					<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
					<a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
				</div>
			</div>
		</div>
	</div>
</div>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}
@section AuthSection {
    <partial name="AuthSection" />
}
